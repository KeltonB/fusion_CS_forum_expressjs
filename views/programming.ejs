<!DOCTYPE html>
<html lang="en">
<head>
  <title>Kelton's BS example.</title>
  <% include partials/common_head_dependencies.ejs %>
</head>
<body>
<!-- container start -->
<div class="container">
  <!-- NAVBAR START -->
  <% include partials/navbar.ejs %>
  <!-- NAVBAR END -->

  <!-- BEGINNING OF ROW -->
  <div class="row justify-content-center">

    <!-- BEGINNING OF COLUMN -->
    <div class="col-sm-8">


      <!-- LIST GROUP START -->
      <ul class="list-group">
        <h2 class="card-title">Programming Topics:</h2>

        <% for(let topic of topics){ %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/thread/<%=topic %>" class="card-link"><%=topic.topic %></a>
            <span class="badge badge-primary badge-pill"><%=topic.posts.length %></span>
        </li>
        <% } %>

      </ul>
      <!-- LIST GROUP END -->


    </div>
    <!-- END OF COLUMN -->

  </div>
  <!-- END OF ROW -->





    
</div>
<!-- container ends here -->
</body>
</html>