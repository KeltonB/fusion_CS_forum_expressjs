<body>
<!-- container start -->
<div class="container">
  <!-- NAVBAR START -->
  <% include partials/navbar.ejs %>
  <!-- NAVBAR END -->

  <!-- BEGINNING OF ROW -->
  <div class="row justify-content-center">

    <!-- BEGINNING OF COLUMN -->
    <div class="col-sm-8">


      <!-- LIST GROUP START -->

      <!-- LIST GROUP END -->

      <hr>

      <!-- ADD POST TO TOPIC -->
      <h2>Topic creator 3000</h2>
      <form action="/crthread" method="POST">
          <!-- <div class="form-group">
            <label for="exampleFormControlInput1">Author</label>
