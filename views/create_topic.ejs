          -->
          <div class="form-group">
            <label for="exampleFormControlSelect1">Topic Type</label>
            <select class="form-control" id="exampleFormControlSelect1" name="topic">
              <option value="programming">Programming</option>
              <option value="batteries">Batteries</option>
              <option value="chemistry">Chemistry</option>
              <option value="solar">Solar</option>
            </select>
          </div>
          <div class="form-group">
            <label for="topic_name">Enter topic title here</label>
            <input type="text" class="form-control" id="topic_name" name="title" rows="3" placeholder="Name">
          </div>
          <div class="form-group">
            <label for="name">Enter your name here</label>
            <input type="text" class="form-control" id="name" name="creator" rows="3" placeholder="Author Name">
          </div>
          <div class="form-group">
              <label for="text">Content</label>
              <textarea class="form-control" id="text" rows="3" name="content" placeholder="Post Content"></textarea>
            </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
