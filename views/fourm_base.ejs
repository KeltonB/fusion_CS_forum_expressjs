<!DOCTYPE html>
<html lang="en">

<head>
  <title><%=thread.title %></title>
  <% include partials/common_head_dependencies.ejs %>
</head>

<body>
  <!-- container start -->
  <div class="container">
    <!-- NAVBAR START -->
    <% include partials/navbar.ejs %>
    <!-- NAVBAR END -->

    <!-- BEGINNING OF ROW -->
    <div class="row justify-content-center">

      <!-- BEGINNING OF COLUMN -->
      <div class="col-sm-8">


        <!-- LIST GROUP START -->
        <ul class="list-group">

          <!-- test -->

          <div class="card text-white bg-danger">
            <h3 class="card-header text-center"><%= thread.title %></h3>
          </div>

          <!-- test end -->
          <!-- <h2 class="card-title"><%= thread.title %></h2> -->

          <% thread.posts.forEach(function(post){ %>

            <% if(post.creator === thread.creator) { %>

              <div class="card bg-success">
                <div class="card-header">
                  <strong>Original Poster</strong>
                  <%=thread.creator %>:
                </div>
                <div class="card-body">
                  <blockquote class="blockquote mb-0">
                    <p><%=post.content %></p>
                  </blockquote>
                </div>
              </div> 

            <% } %>

            <% if(post.creator !== thread.creator) { %>

              <div class="card">
                  <div class="card-header">
                    <%=post.creator %>:
                  </div>
                  <div class="card-body">
                    <blockquote class="blockquote mb-0">
                      <p><%=post.content %></p>
                    </blockquote>
                  </div>
                </div>

            <% } %>





          <% }); %>

        </ul>

        <!-- LIST GROUP END -->

        <hr>

        <!-- ADD POST TO TOPIC -->
        <h2>ADD TO THIS TOPIC</h2>
        <form action="/thread/<%=thread.id %>" method="POST">
          <!-- <div class="form-group">
            <label for="exampleFormControlInput1">Author</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
          </div>
          -->
          <div class="form-group">
            <label for="name">Enter name here</label>
            <input type="text" class="form-control" id="name" name="name" rows="3" placeholder="Name">
          </div>
          <div class="form-group">
            <label for="text">Post MSG</label>
            <textarea class="form-control" id="text" rows="3" name="text" placeholder="Post Content"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <!-- END OF ADD POST TO TOPIC -->




      </div>
      <!-- END OF COLUMN -->

    </div>
    <!-- END OF ROW -->
  </div>
  <!-- container ends here -->
</body>

</html>